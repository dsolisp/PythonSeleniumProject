# This is a sample Python script.

from selenium.webdriver.common.by import By
from hamcrest import assert_that, contains_string, is_, equal_to
from time import sleep


def print_hi(name):
    from selenium import webdriver
    from selenium.webdriver.chrome.service import Service as ChromeService
    from webdriver_manager.chrome import ChromeDriverManager

    chrome_driver = webdriver.Chrome(service=ChromeService(ChromeDriverManager().install()))
    chrome_driver.get("http://www.google.com")
    chrome_driver.maximize_window()

    element = chrome_driver.find_element(By.NAME, 'q')
    element.send_keys(name)
    element.submit()

    title = "Naruto"
    link = chrome_driver.find_element(By.XPATH, "//h3[.='Naruto - Wikipedia, la enciclopedia libre']")
    link.click()
    sleep(5)
    assert_that(chrome_driver.title, contains_string(title))
    #assert_that(5, is_(equal_to(4)))

    # Use a breakpoint in the code line below to debug your script.
    print(f'Hi, {name}')  # Press Ctrl+F8 to toggle the breakpoint.


# Press the green button in the gutter to run the script.
if __name__ == '__main__':
    print_hi('naruto')

