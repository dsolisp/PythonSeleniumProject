# =============================================================================
# ENVIRONMENT CONFIGURATION
# Copy this file to .env and customize values for your environment
# =============================================================================

# Browser Configuration
BROWSER=chrome
HEADLESS=false
TIMEOUT=10
SCREENSHOT_ON_FAILURE=true

# Database Configuration  
DB_PATH=resources/chinook.db

# Application URLs
BASE_URL=https://duckduckgo.com
API_BASE_URL=https://jsonplaceholder.typicode.com
SEARCH_URL=https://duckduckgo.com/?q=test

# Test URLs for different testing scenarios
TEST_API_URL=https://httpbin.org/json
TEST_HTML_URL=https://httpbin.org/html
EXAMPLE_URL=https://example.com
TEST_URL=https://test.com
API_TEST_URL=https://api.test.com/data
INVALID_URL=https://nonexistent-domain-12345.com

# Test Data - Search Terms
DEFAULT_SEARCH_TERM=Python automation testing
SELENIUM_SEARCH_TERM=Selenium Python
PERFORMANCE_SEARCH_TERM=selenium testing performance
PLAYWRIGHT_SEARCH_TERM=Python automation testing playwright

# Test Data - Lists
SEARCH_TERMS_LIST=Python automation,Selenium WebDriver,Test framework

# Test Configuration
ENVIRONMENT=local
DEBUG=true
LOG_LEVEL=INFO

# Directories (relative to project root)
REPORTS_DIR=reports
SCREENSHOTS_DIR=screenshots
LOGS_DIR=logs

# Visual Testing
VISUAL_THRESHOLD=1000
SAVE_DIFF_IMAGES=true

# Performance 
IMPLICIT_WAIT=10
EXPLICIT_WAIT=20
PAGE_LOAD_TIMEOUT=30

# Optional: CI/CD Integration
# SLACK_WEBHOOK_URL=
# EMAIL_NOTIFICATIONS=false

# Optional: Cloud Testing
# BROWSERSTACK_USERNAME=
# BROWSERSTACK_ACCESS_KEY=