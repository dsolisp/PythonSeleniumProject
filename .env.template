# Environment Configuration
ENVIRONMENT=local
DEBUG=true
LOG_LEVEL=INFO

# Browser Configuration
DEFAULT_BROWSER=chrome
HEADLESS=false
BROWSER_TIMEOUT=30
IMPLICIT_WAIT=10
EXPLICIT_WAIT=20
PAGE_LOAD_TIMEOUT=30

# Test Configuration
